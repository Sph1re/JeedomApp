<Page x:ConnectionId='1' x:Class="JeedomApp.Views.ScenePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:Behaviors="using:Template10.Behaviors"
      xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
      xmlns:controls10="using:Template10.Controls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:JeedomApp.Views"
      xmlns:localctl="using:JeedomApp.Controls"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="using:JeedomApp.ViewModels"
      mc:Ignorable="d">

    <Page.DataContext>
        <vm:ScenePageViewModel x:ConnectionId='2' x:Name="ViewModel" />
    </Page.DataContext>

    <Grid Background="{ThemeResource MainBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  header  -->
        <controls10:PageHeader x:ConnectionId='3' Content="Scénarios"                        />

        <!--  content  -->
        <ScrollViewer Grid.Row="1">
            <StackPanel>
                <GridView x:ConnectionId='4' x:Name="gridview"
                          Margin="15"
                          IsItemClickEnabled="True"
                                                        
                          ItemTemplate="{StaticResource SceneTemplate}"
                                                                    
                          SelectionMode="None" />
            </StackPanel>
        </ScrollViewer>

        <!--  statusbar  -->
        <Grid Grid.Row="2">
            <localctl:StatusBar />
        </Grid>
    </Grid>
</Page>

