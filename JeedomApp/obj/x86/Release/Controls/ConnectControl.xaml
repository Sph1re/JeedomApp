<UserControl x:ConnectionId='1' x:Class="JeedomApp.Controls.ConnectControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:JeedomApp.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:JeedomApp.ViewModels"
             mc:Ignorable="d">

    <UserControl.DataContext>
        <vm:ConnectViewModel x:ConnectionId='2' x:Name="ViewModel" />
    </UserControl.DataContext>

    <RelativePanel x:ConnectionId='3' x:Name="ConfigPanel" Grid.Row="2">
        <TextBox x:ConnectionId='4' x:Name="tbHost"
                 Width="260"
                 Margin="5"
                 Header="Serveur"
                 PlaceholderText="Adresse IP local de votre jeesom"
                 RelativePanel.AlignHorizontalCenterWithPanel="True"
                                                            
                 TextWrapping="Wrap" />
        <TextBox x:ConnectionId='5' x:Name="tbLogin"
                 Width="260"
                 Margin="5"
                 Header="Login"
                 PlaceholderText="Login de connexion a jeedom"
                                                             
                 RelativePanel.AlignHorizontalCenterWithPanel="True"
                 RelativePanel.Below="tbHost"                                  />
        <PasswordBox x:ConnectionId='6' x:Name="tbPass"
                 Width="260"
                 Margin="5"
                 Header="Password"
                 PlaceholderText="Mot de passe de connexion jeedom"
                                                                    
                 RelativePanel.AlignHorizontalCenterWithPanel="True"
                 RelativePanel.Below="tbLogin"/>
        <CheckBox x:ConnectionId='7' x:Name="cbConnexionAuto"
                  Width="260"
                  Margin="5"
                  HorizontalAlignment="Left"
                  Content="Connexion automatique"
                                                                           
                  RelativePanel.AlignHorizontalCenterWithPanel="True"
                  RelativePanel.Below="tbPass" />
        <TextBox x:ConnectionId='8' x:Name="tbtwoFactorCode"
                 Width="260"
                 Margin="5"
                 Header="Authentification a 2 étape"
                 PlaceholderText="Code authentification a 2 étape"
                                                                     
                 RelativePanel.AlignHorizontalCenterWithPanel="True"
                 RelativePanel.Below="cbConnexionAuto" />

    </RelativePanel>
</UserControl>

