<UserControl x:ConnectionId='1' x:Class="JeedomApp.Controls.ConnectControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:JeedomApp.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:JeedomApp.ViewModels"
             d:DesignHeight="300"
             d:DesignWidth="400"
             mc:Ignorable="d">

    <UserControl.DataContext>
        <vm:ConnectViewModel x:ConnectionId='2' x:Name="ViewModel" />
    </UserControl.DataContext>

    <RelativePanel x:ConnectionId='3' x:Name="ConfigPanel" Grid.Row="2">
        <TextBox x:ConnectionId='4' x:Name="tbHost"
                 Width="260"
                 Margin="5"
                 Header="Serveur"
                 PlaceholderText="Adresse IP ou Nom d'hôte du serveur"
                 RelativePanel.AlignHorizontalCenterWithPanel="True"
                                                            
                 TextWrapping="Wrap" />
        <TextBox x:ConnectionId='5' x:Name="pbAPIKey"
                 Width="260"
                 Margin="5"
                 Header="Clé API"
                 PlaceholderText="Clé API à récupérer dans JEEDOM"
                 RelativePanel.AlignHorizontalCenterWithPanel="True"
                 RelativePanel.Below="tbPath"
                                                               />

        <CheckBox x:ConnectionId='6' x:Name="cbSsl"
                  Width="260"
                  Margin="5"
                  VerticalAlignment="Stretch"
                  Content="Utiliser SSL"
                                                                    
                  RelativePanel.AlignHorizontalCenterWithPanel="True"
                  RelativePanel.Below="tbHost" />
        <TextBox x:ConnectionId='7' x:Name="tbPath"
                 Width="260"
                 Margin="5"
                 Header="Chemin"
                 PlaceholderText="Chemin d'accès"
                 RelativePanel.AlignHorizontalCenterWithPanel="True"
                 RelativePanel.Below="cbSsl"
                                                             />
        <CheckBox x:ConnectionId='8' x:Name="cbSelfSigned"
                  Width="260"
                  Margin="5"
                  HorizontalAlignment="Left"
                  Content="Certificat Autosigné"
                                                                          
                  RelativePanel.AlignHorizontalCenterWithPanel="True"
                  RelativePanel.Below="pbAPIKey" />
        <TextBox x:ConnectionId='9' x:Name="tbDNS"
                 Width="260"
                 Margin="5"
                 Header="DNS"
                 PlaceholderText="Adresse sur le DNS Jeedom"
                 RelativePanel.AlignHorizontalCenterWithPanel="True"
                 RelativePanel.Below="cbSelfSigned"
                                                               />
    </RelativePanel>
</UserControl>

