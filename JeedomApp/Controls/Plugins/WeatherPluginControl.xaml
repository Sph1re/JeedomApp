                        FontWeight="ExtraLight"
                        Text="{x:Bind TemperatureMax2, Mode=OneWay, FallbackValue=##, Converter={StaticResource DoubleToIntConverter}}" />
                </StackPanel>
            </RelativePanel>

            <!--  Jour 3  -->
